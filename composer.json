{
    "name": "mindtwo/laravel-document-generator",
    "type": "proprietary",
    "description": "A project to define and generate documents.",
    "license": "MIT",
    "keywords": [
        "framework",
        "laravel"
    ],
    "authors": [
        {
            "name": "mindtwo GmbH",
            "email": "info@mindtwo.de",
            "homepage": "https://mindtwo.de"
        }
    ],
    "require": {
        "php": "^8.2||^8.3||^8.4",
        "mindtwo/laravel-auto-create-uuid": "^2.6",
        "dompdf/dompdf": "^2.0.4",
        "ramsey/uuid": "^4.7",
        "laravel/framework": "^9.0||^10.0||^11.0||^12.0",
        "spatie/laravel-data": "^4.7"
    },
    "require-dev": {
        "laravel/pint": "^1.2",
        "pestphp/pest": "^2.34||^3.0",
        "orchestra/testbench": "^8.21|^9.0||^10.0||^11.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "mindtwo\\DocumentGenerator\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "mindtwo\\DocumentGenerator\\Providers\\DocumentGeneratorProvider"
            ],
            "aliases": []
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve"
        ],
        "lint": [
            "@php vendor/bin/pint",
            "@php vendor/bin/phpstan analyse"
        ],
        "test": [
            "@php vendor/bin/pest"
        ]
    }
}
